# ============================================================
# Bentropy Arena - Environment Variables
# ============================================================

# Firebase (for Google Auth + Firestore leaderboard)
VITE_FIREBASE_API_KEY=your-api-key
VITE_FIREBASE_AUTH_DOMAIN=your-project.firebaseapp.com
VITE_FIREBASE_PROJECT_ID=your-project-id
VITE_FIREBASE_STORAGE_BUCKET=your-project.appspot.com
VITE_FIREBASE_MESSAGING_SENDER_ID=000000000000
VITE_FIREBASE_APP_ID=1:000000000000:web:0000000000000000

# WebSocket Server URL (for multiplayer)
# Development: ws://localhost:8080
# Production: wss://your-server.railway.app (or wherever you deploy the server)
VITE_WS_URL=ws://localhost:8080

# Server-side variables (for server/src/index.ts)
PORT=8080
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173
